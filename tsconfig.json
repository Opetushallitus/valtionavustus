{
  "extends": "./common-tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "soresu-form/*": ["soresu-form/*"]
    }
  },
  "include": [
    "./va-hakija/**/*",
    "./va-virkailija/**/*",
    "./soresu-form/**/*"
  ],
  "exclude": [
    "node_modules",
    "va-admin-ui/target",
    "soresu-form/target",
    "va-hakija/target",
    "va-virkailija/target",
    "va-admin-ui/resources",
    "soresu-form/resources",
    "va-hakija/resources",
    "va-virkailija/resources"
  ]
}
